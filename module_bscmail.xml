<?xml version="1.0" encoding="UTF-8"?>
<project name="module_bscmail" default="compile.module.bscmail">
  <dirname property="module.bscmail.basedir" file="${ant.file.module_bscmail}"/>
  
  <property name="module.jdk.home.bscmail" value="${jdk.home.1.7}"/>
  <property name="module.jdk.bin.bscmail" value="${jdk.bin.1.7}"/>
  <property name="module.jdk.classpath.bscmail" value="jdk.classpath.1.7"/>
  
  <property name="compiler.args.bscmail" value="-encoding UTF-8 -source 1.3 -target 1.3 ${compiler.args}"/>
  
  <property name="bscmail.output.dir" value="${module.bscmail.basedir}/out/production/BSCMail"/>
  <property name="bscmail.testoutput.dir" value="${module.bscmail.basedir}/out/test/BSCMail"/>
  
  <path id="bscmail.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="bscmail.module.production.classpath">
    <path refid="${module.jdk.classpath.bscmail}"/>
  </path>
  
  <path id="bscmail.runtime.production.module.classpath">
    <pathelement location="${bscmail.output.dir}"/>
  </path>
  
  <path id="bscmail.module.classpath">
    <path refid="${module.jdk.classpath.bscmail}"/>
    <pathelement location="${bscmail.output.dir}"/>
  </path>
  
  <path id="bscmail.runtime.module.classpath">
    <pathelement location="${bscmail.testoutput.dir}"/>
    <pathelement location="${bscmail.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.bscmail">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.bscmail">
    <patternset refid="excluded.from.module.bscmail"/>
  </patternset>
  
  <path id="bscmail.module.sourcepath">
    <dirset dir="${module.bscmail.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="bscmail.module.test.sourcepath">
    <dirset dir="${module.bscmail.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.bscmail" depends="compile.module.bscmail.production,compile.module.bscmail.tests" description="Compile module BSCMail"/>
  
  <target name="compile.module.bscmail.production" depends="register.custom.compilers" description="Compile module BSCMail; production classes">
    <mkdir dir="${bscmail.output.dir}"/>
    <javac2 destdir="${bscmail.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bscmail}/javac">
      <compilerarg line="${compiler.args.bscmail}"/>
      <bootclasspath refid="bscmail.module.bootclasspath"/>
      <classpath refid="bscmail.module.production.classpath"/>
      <src refid="bscmail.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.bscmail"/>
    </javac2>
    
    <copy todir="${bscmail.output.dir}">
      <fileset dir="${module.bscmail.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.bscmail.tests" depends="register.custom.compilers,compile.module.bscmail.production" description="compile module BSCMail; test classes" unless="skip.tests">
    <mkdir dir="${bscmail.testoutput.dir}"/>
    <javac2 destdir="${bscmail.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bscmail}/javac">
      <compilerarg line="${compiler.args.bscmail}"/>
      <bootclasspath refid="bscmail.module.bootclasspath"/>
      <classpath refid="bscmail.module.classpath"/>
      <src refid="bscmail.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.bscmail"/>
    </javac2>
    
    <copy todir="${bscmail.testoutput.dir}">
      <fileset dir="${module.bscmail.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.bscmail" description="cleanup module">
    <delete dir="${bscmail.output.dir}"/>
    <delete dir="${bscmail.testoutput.dir}"/>
  </target>
</project>